<%- include("./partials/top-home") -%>
    <%- include("./partials/nav-home") -%>

        <main class="container-fluid flex-fill">

            <div class="row mb-4">
                <div class="col m-0 p-0">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <% carousel.map((slide, index)=> { %>

                                <%if (index===0 ) { %>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>"
                                        class="active"></li>
                                    <% } %>

                                        <%if (index!==0 ) { %>
                                            <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>">
                                            </li>
                                            <% } %>

                                                <% }) %>
                        </ol>
                        <div class="carousel-inner">

                            <% carousel.map((slide, index)=> { %>

                                <%if (index===0 ) { %>
                                    <div class="carousel-item active">
                                        <img class="d-block w-100" src="<%= slide.image %>" alt="<%= slide.title %>">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h5>
                                                <%= slide.title %>
                                            </h5>
                                            <p>
                                                <%= slide.description %>
                                            </p>
                                        </div>
                                    </div>
                                    <% } %>

                                        <%if (index!==0 ) { %>
                                            <div class="carousel-item">
                                                <img class="d-block w-100" src="<%= slide.image %>"
                                                    alt="<%= slide.title %>">
                                                <div class="carousel-caption d-none d-md-block">
                                                    <h5>
                                                        <%= slide.title %>
                                                    </h5>
                                                    <p>
                                                        <%= slide.description %>
                                                    </p>
                                                </div>
                                            </div>
                                            <% } %>

                                                <% }) %>

                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                            data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                            data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="row mb-4">
                <div class="container">
                    <div class="row">
                        <div class="col">

                            <div class="card-group">
                                <% cards.map((card, index)=> { %>
                                    <div class="card">
                                        <img class="card-img-top" src="<%= card.image %>" alt="<%= card.title %>">
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <%= card.title %>
                                            </h5>
                                            <p class="card-text">
                                                <%= card.description %>
                                            </p>
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    Last updated 3 mins ago
                                                </small>
                                            </p>
                                        </div>
                                    </div>
                                    <% }) %>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="row p-3">

                <div class="col-3">
                    <div class="card my-4">
                        <div class="card-body">
                            <h2 class="card-title">
                                <i class="bi bi-person-fill font-weight-normal"></i>
                                <%- data.name -%>
                            </h2>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk
                                of
                                the card's content.</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <i class="bi bi-envelope font-weight-normal"></i>
                                <%- data.email -%>
                            </li>
                            <li class="list-group-item">Dapibus ac facilisis in</li>
                            <li class="list-group-item">Vestibulum at eros</li>
                        </ul>
                        <div class="card-body">
                            <a href="#" class="card-link">Card link</a>
                            <a href="#" class="card-link">Another link</a>
                        </div>
                    </div>
                </div>

                <div class="col-6 py-4">
                    <% posts.map((post, index)=> { %>
                        <div class="card mb-3">
                            <div class="card-header">
                                <a class="text-decoration-none" href="/post?id=<%= post.id %>&token=<%= token %>">
                                    <%= post.date %>
                                </a>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= post.title %>
                                </h5>
                                <div class="card-text">
                                    <%= post.text %>
                                </div>
                            </div>
                            <div class="card-footer">
                                <a class="text-decoration-none float-right"
                                    href="/post?id=<%= post.id %>&token=<%= token %>">
                                    Leia Mais
                                </a>
                            </div>
                        </div>
                        <% }) %>
                </div>

                <div class="col-3 py-4">
                    <div class="card">
                        <div class="card-body">
                            This is some text within a card body.
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <%- include("./partials/footer-home") -%>