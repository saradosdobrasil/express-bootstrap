<%- include("./partials/top-admin") -%>

    <main class="container-fluid flex-fill">
        <div class="row p-3">
            <div class="col">

                <h4 class="py-4">
                    <i class="bi bi-pencil-square"></i>
                    Publicar Postagem
                </h4>

                <form>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="title">Título</label>
                                <input type="title" class="form-control" id="title" name="title" required>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="date">Data</label>
                                <input type="date" class="form-control" id="date" name="date" value="<%- date -%>"
                                    required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="video">Vídeo (digite o código de incorporação)</label>
                                <textarea class="form-control" id="video" name="video" rows="2"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="textarea">Texto</label>
                                <textarea class="form-control" id="text" name="text" rows="15" required></textarea>
                            </div>

                            <button type="submit" formaction='publish?token=<%- token -%>' formmethod='POST'
                                class="btn btn-success float-right">Publicar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <%- include("./partials/footer-admin") -%>