<%- include("./partials/top-admin") -%>

    <main class="container-fluid flex-fill">
        <div class="row p-3">
            <div class="col">
                <div class="row align-items-center">
                    <div class="col">
                        <h4 class="py-4">
                            <i class="bi bi-pencil-square"></i>
                            Publicar Postagem
                        </h4>
                    </div>
                    <div class="col">
                        <a class="btn btn-outline-dark float-right" href="/manageposts?token=<%= token %>" role="button">
                            Gerenciar Postagens
                        </a>
                        <a class="btn btn-outline-dark float-right mr-2" href="/authentication?token=<%= token %>" role="button">
                            Voltar
                        </a>
                    </div>
                </div>
                
                <form>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="title">TÃ­tulo</label>
                                <input type="title" class="form-control" id="title" name="title" required>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="date">Data</label>
                                <input type="date" class="form-control" id="date" name="date" value="<%- date -%>"
                                    required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="textarea">Texto</label>
                                <textarea class="form-control" id="text" name="text" rows="10" required></textarea>
                            </div>

                            <button type="submit" formaction='publish?token=<%- token -%>' formmethod='POST'
                                class="btn btn-success float-right">Publicar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </main>

